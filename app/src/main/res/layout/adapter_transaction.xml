<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="200.000" />

        <TextView
            android:id="@+id/txvInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvTotal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            tools:text="181019000001" />

        <TextView
            android:id="@+id/txvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvInvoice"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            tools:text="18-October-2019" />

        <TextView
            android:id="@+id/txvSee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvDate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:text="Lihat detail"
            android:textColor="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>